{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalDotEnv": [".env"],
  "globalEnv": [
    "API_PORT",
    "ORIGINS",
    "SIGN_KEY",
    "ENCRYPT_KEY",
    "NODE_ENV",
    "MONGO_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dotEnv": [".env"],
      "cache": false,
      "persistent": true
    }
  }
}
