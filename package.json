{
  "name": "apms-3.0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "urbo dev",
    "lint": "turbo lint",
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
